                            <?php echo '<span class="price">'. $_product->get_price_html() .'</span>'?>
                  </a>
                  <div class="cartbutton">
                    <a href="<?php echo get_the_permalink($pro->ID); ?>">Buy Now</a>
                  </div>
              </li>
          <?php endforeach;
          wp_reset_query(); 
        ?>
      </ul>
    </div>
  </div>
</div>
